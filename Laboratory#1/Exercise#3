   <!-- MainActivity.kt -->
  
package com.example.mainactivity

import android.os.Bundle
import android.widget.ArrayAdapter
import android.widget.AutoCompleteTextView
import android.widget.Spinner
import androidx.appcompat.app.AppCompatActivity

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        // AutoCompleteTextView setup
        val countries = arrayOf("Philippines", "Japan", "Korea", "USA", "Canada", "Australia", "France")
        val autoCompleteCountry = findViewById<AutoCompleteTextView>(R.id.autoCompleteCountry)
        val adapter = ArrayAdapter(this, android.R.layout.simple_dropdown_item_1line, countries)
        autoCompleteCountry.setAdapter(adapter)

        // Spinner setup
        val spinner = findViewById<Spinner>(R.id.spinnerOptions)
        val options = arrayOf("Philippines", "Japan", "Korea", "USA", "Canada", "Australia", "France")
        val spinnerAdapter = ArrayAdapter(this, android.R.layout.simple_spinner_item, options)
        spinnerAdapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item)
        spinner.adapter = spinnerAdapter
    }
}

